{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "declaration": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    "jest.config.ts",
    "**/*.test.ts",
    "cdk.out"
  ]
}
